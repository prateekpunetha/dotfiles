# basic stuff

set sandbox none
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map F toggle_fullscreen
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
map g goto top


# material ocean colorscheme

set default-bg                  "#0f111a"
set default-fg                  "#3B4252"

set statusbar-fg                "#000006"
set statusbar-bg                "#4C566A"

set inputbar-bg                 "#0f111a"
set inputbar-fg                 "#B48EAD"

set notification-bg             "#0f111a"
set notification-fg             "#B48EAD"

set notification-error-bg       "#0f111a"
set notification-error-fg       "#BF616A"

set notification-warning-bg     "#0f111a"
set notification-warning-fg     "#BF616A"

set highlight-color             "#EBCB8B"
set highlight-active-color      "#81A1C1"

set completion-bg               "#3B4252"
set completion-fg               "#81A1C1"

set completion-highlight-fg     "#B48EAD"
set completion-highlight-bg     "#81A1C1"

set recolor-lightcolor          "#0f111a"
set recolor-darkcolor           "#E5E9F0"

set recolor-keephue             "true"
